// This configuration stores the default values (factory settings) for your device
// These values will be overridden by the user settings via the UI until factory reset
{
    // Wiring config for gpio pins
    // Set unused pins to -1
    "gpio": {
        // Common I2C interface (used for i.e. RTC Module)
        "i2c": {
            "sda": -1,  // Data
            "clk": -1    // Clock
        },

        // Common SPI interface (used for i.e. SD Card)
        "spi": {
            "clk": 444,
            "mosi": -5,
            "miso": 6
        },

        // SD Card Reader
        "sd": {
            "cs": 100 // Chip Select Pin for SPI interface
        },

        "controls": {
            "softwareDebounce": false, // uses debouncing logic in interrupt
            
            // set expander properties if controls are not directly wired to the gpio of the controller but through an IO Expander
            "expander": {
                "enabled": false,
                "interrupt": -1,    // gpio pin for interrupt from IO Expander (required when using an IO Expander)
                "cs": -1,           // chip select for using SPI
                "address": -1       // address for using I2C
            },

            // Buttons
            "btn1":       8,    // Next
            "btn2":       3,    // Mode
            "btn3":       10,   // Menu

            // Rotary Encoder 1 - Brightness
            "rot1": {
                "btn":   12,
                "b":     13,
                "a":     14
            },
            
            // Rotary Encoder 2 - Diashow
            "rot2": {
                "btn":   9,
                "b":     11,
                "a":     46
            },
            
            // Rotary Encoder 3 - Animation
            "rot3": {
                "btn":   18,
                "b":     16,
                "a":     17
            }
        }
    },
    "wifi": {
        "hostname": "testhostname",

        // Connection to existing wifi network
        "connect": {
            "enabled": true,
            "ssid": "Secret Wifi",
            "password": "supersecret"
        },

        // Host own network
        "host": {
            "enabled": false,
            "ssid": "secret",
            "password": "asdasdfasd"
        }
    },
    "time": {
        "showSeconds": false,        // show seconds when displaying time
        "blink": true,             // blinking dots between hours, minutes and seconds
        "showYear": false,           // Show year when displaying date
        "format24h": false,          // Display time in 24h or 12h format

        "update": false,             // Auto update when connecting to network
        "server": "pool.asdfasdfntp.org",   // NTP-/Time- Server

        // timezone either by timezone identifier like `UTC0` or Location like `Europe/Berlin` or timezone variables
        // a list with examples: https://github.com/nayarsystems/posix_tz_db/blob/master/zones.csv
        // description of TZ Variables: https://www.gnu.org/software/libc/manual/html_node/TZ-Variable.html
        "zone": "CET-1CEST,M3.5.0,M10.5.0/3"
    },
    "socials": {
        "enabled": true,
        "interval": 31000,                              // Interval for fetching social stats from api
        "key": "sdfgsdfggvsdfv",  // Key for authenticating to api server (id in the database)
        "server": "https://api.server",    // social server as proxy between social media platforms and controller (see pixelart-interface)
        "request": "[{\"t\":\"i\",\"c\":\"DerEffi\",\"d\":\"@JaDerEffi\"}]" // displayed social media channels
    },
    "display": {
        "brightness": -10, // between 0 and 255 (smaller than 20 will be off)
        "mode": 0, // 0 - images, 1 - clock, 2 - socials

        "clock": {
            "mode": 0 // 0 - analog, 1 - digital, 2 - digital with date, 3 - digital with big numbers
        },

        "diashow": {
            "enabled": true,
            "interval": 1000, // time to wait before next image in ms
            "switchModes": true // switch between images and socials
        },

        "animation": {
            "enabled": true,
            "interval": 30000 // time to wait before next frame in ms
        }
    }
}